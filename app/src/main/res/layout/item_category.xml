<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_100sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp"
    android:layout_height="@dimen/_100sdp">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/category_adapter_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/image_footer"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/_15ssp"/>


        <ImageView
            android:id="@+id/category_adapter_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/islam"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/category_adapter_tv_name"
           />

        <CheckBox
            android:id="@+id/category_adapter_cb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_alignParentEnd="true"/>



    </RelativeLayout>



</androidx.cardview.widget.CardView>