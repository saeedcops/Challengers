<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg9"
    android:padding="@dimen/_2sdp"
    tools:context=".view.fragments.OfflineTableFragment">

    <!-- TODO: Update blank fragment layout -->



    <!--    table -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/offline_table_fragment_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/offline_table_fragment_tv_question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/_5sdp"
            android:text="1/10"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/offline_table_fragment_card_write"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@+id/offline_adView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/offline_table_fragment_tv_question_number">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/offline_table_fragment_cl_choose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_card"
                android:padding="@dimen/_10sdp"
                android:visibility="gone"
                >


                <TextView
                    android:id="@+id/offline_table_fragment_tv_choose_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/iv_league_shape"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryText"
                    app:layout_constraintBottom_toTopOf="@+id/offline_table_fragment_tv_question"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />



                <TextView
                    android:id="@+id/offline_table_fragment_tv_question"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/shape_cost_card"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/app_name"
                    android:textSize="@dimen/_15ssp"
                    android:layout_margin="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:layout_constraintBottom_toTopOf="@+id/offline_table_fragment_btn_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/offline_table_fragment_tv_choose_category"

                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/offline_table_fragment_btn_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/shape_answer_btn"
                    app:layout_constraintEnd_toStartOf="@+id/offline_table_fragment_btn_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/offline_table_fragment_tv_question" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/offline_table_fragment_btn_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/shape_answer_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/offline_table_fragment_btn_1"
                    app:layout_constraintTop_toBottomOf="@+id/offline_table_fragment_tv_question" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/offline_table_fragment_btn_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/shape_answer_btn"
                    app:layout_constraintEnd_toStartOf="@+id/offline_table_fragment_btn_4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/offline_table_fragment_btn_1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/offline_table_fragment_btn_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/shape_answer_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/offline_table_fragment_btn_3"
                    app:layout_constraintTop_toBottomOf="@+id/offline_table_fragment_btn_2" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/offline_table_fragment_btn_4" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/offline_table_fragment_cl_write"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_card"
                android:padding="@dimen/_10sdp"
                android:visibility="visible">


                <TextView
                    android:id="@+id/offline_table_fragment_tv_write_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/iv_league_shape"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryText"
                    app:layout_constraintBottom_toTopOf="@+id/offline_table_fragment_tv_question_write"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/offline_table_fragment_tv_question_write"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_cost_card"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:layout_margin="@dimen/_5sdp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/offline_table_fragment_tv_write"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/offline_table_fragment_tv_write_category"

                    />

                <ImageView
                    android:id="@+id/offline_table_fragment_civ_cancel"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_exit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/offline_table_fragment_tv_write"
                    app:layout_constraintTop_toTopOf="@+id/offline_table_fragment_tv_write" />

                <ImageView
                    android:id="@+id/offline_table_fragment_civ_check"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"

                    android:src="@drawable/ic_check_circle"
                    app:layout_constraintBottom_toBottomOf="@+id/offline_table_fragment_tv_write"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/offline_table_fragment_civ_cancel" />


                <TextView
                    android:id="@+id/offline_table_fragment_tv_write"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:background="@drawable/shape_write_card"
                    android:focusable="true"
                    android:hint="@string/your_answer"
                    android:padding="@dimen/_15sdp"
                    android:textAlignment="center"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintBottom_toTopOf="@+id/offline_table_fragment_rv_choose"
                    app:layout_constraintEnd_toStartOf="@+id/offline_table_fragment_civ_cancel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/offline_table_fragment_tv_question_write" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/offline_table_fragment_rv_choose"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/offline_table_fragment_tv_write" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/offline_adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-8148071716960089/8579995692">
        </com.google.android.gms.ads.AdView>
    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>